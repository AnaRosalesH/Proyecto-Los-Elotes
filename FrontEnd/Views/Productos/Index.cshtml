@model IEnumerable<FrontEnd.Models.ProductoViewModel>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="container-fluid">
    <br />

    <div class="row">
        <div class="col-sm-12">
            <div class="table-responsive">
                <table id="tblProd" class="display table stripe hover row-border" style="width: 100%; cellspacing: 0;">
                    <thead>
                        <tr>
                            <th>
                                Producto
                            </th>
                            <th>
                                Imagen
                            </th>
                            <th>
                                Precio
                            </th>
                            <th>
                                Cantidad
                            </th>
                            <th>
                                Categoría
                            </th>
                            <th>
                                Marca
                            </th>
                            <th class="col-sm-3"></th>
                        </tr>
                    </thead>
                    <tfoot>
                        <tr>
                        </tr>
                    </tfoot>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.NombreProducto)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.RutaImagen)
                                </td>
                                <td>
                                    ₡@Html.DisplayFor(modelItem => item.PrecioProducto)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.CantidadProducto)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.IdCategoria)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.IdMarca)
                                </td>
                                <td>

                                    @Html.ActionLink("Editar", "Edit", new { id = item.IdProducto },
                                   new { @class = "btn btn-info", style = "width: 49%;" })


                                    @Html.ActionLink("Eliminar", "Delete", new { id = item.IdProducto },
                                   new { @class = "btn btn-danger", style = "width: 49%;" })


                                </td>
                            </tr>
                        }
                    </tbody>
                </table>

                <div class="row col-lg-12">

                    <div class="col-lg-4 form-group">
                        <div class="col-md-12">

                        </div>
                    </div>
                    <div class="col-lg-4 form-group">
                        <div class="col-md-12">
                            <br>
                            @Html.ActionLink("Crear nuevo producto", "Create", "Productos", null, new { @class = "btn btn-warning form-control" })
                        </div>
                    </div>
                    <div class="col-lg-4 form-group">
                        <div class="col-md-12">

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


@section scripts{

    <script type="text/javascript" charset="utf8" src="https://cdn.datatables.net/1.10.25/js/jquery.dataTables.js"></script>

    <script>
        $('#tblProd').DataTable({
            "language": {
                "url": "//cdn.datatables.net/plug-ins/9dcbecd42ad/i18n/Spanish.json"
            }
        });
    </script>

}
