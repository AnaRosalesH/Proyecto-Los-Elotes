@model BackEnd.Entities.Producto

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">


    <div class="row">

        <div class="col-sm-4">

            <br />

            <h4>¿Desea eliminar esto?</h4>

            <br />

            <div class="form-group">
                <div class="col-md-12">
                    <div class="col-sm-6">
                        <b>Id Producto</b>
                    </div>
                    <div class="col-md-6">
                        @Html.DisplayFor(model => model.IdProducto)
                    </div>
                    <div class="col-md-8">
                        <b>Nombre Producto</b>
                    </div>
                    <div class="col-md-4">
                        @Html.DisplayFor(model => model.NombreProducto)
                    </div>
                    <div class="col-md-8">
                        <b>Categoría Producto</b>
                    </div>
                    <div class="col-md-4">
                        @Html.DisplayFor(model => model.IdCategoria)
                    </div>
                    <div class="col-md-8">
                        <b>Marca Producto</b>
                    </div>
                    <div class="col-md-4">
                        @Html.DisplayFor(model => model.IdMarca)
                    </div>
                    <div class="col-md-8">
                        <b>Ruta Imagen</b>
                    </div>
                    <div class="col-md-4">
                        @Html.DisplayFor(model => model.RutaImagen)
                    </div>
                    <div class="col-md-8">
                        <b>Precio Producto</b>
                    </div>
                    <div class="col-md-4">
                        @Html.DisplayFor(model => model.PrecioProducto)
                    </div>
                    <div class="col-md-8">
                        <b>Cantidad Producto</b>
                    </div>
                    <div class="col-md-4">
                        @Html.DisplayFor(model => model.CantidadProducto)
                    </div>



                </div>
            </div>

            <div class="form-group">
                <form asp-action="Delete">
                    @Html.HiddenFor(model => model.IdProducto)
                    <input type="submit" value="Eliminar" class="btn btn-danger" style="width:100%" />

                </form>
            </div>

        </div>

        <div class="col-sm">



            <div class="jumbotron mt-5 mr-5">
                <h2>
                    Eliminar producto

                </h2>
                <p>
                    <div class="alert alert-info" role="alert">
                        <h4 class="alert-heading">¡Usted esta a punto de eliminar un producto!</h4>
                        <p>
                            Recuerde asegurarse de que esta eliminando el producto adecuado y verificar que tiene el permiso y el stock necesario para eliminar un producto.
                        </p>

                        <hr>
                        <p class="mb-0">Cuando este listo solo presione el boton eliminar, si requiere ayuda, contacte con un administrador mas experimentado.</p>
                    </div>
                </p>
                <div class="form-group">

                    <div class="col-md-offset-2 col-md-5">
                        @Html.ActionLink("Regresar a la tabla", "Index", null,
                              new { @class = "btn btn-warning", style = "width: 100%;" })
                    </div>


                </div>
            </div>

        </div>

    </div>
</div>