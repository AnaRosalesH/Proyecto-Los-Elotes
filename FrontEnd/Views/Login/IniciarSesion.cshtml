@model BackEnd.Entities.Usuario

<br />
<div class="container-fluid">
    <div class="row">
        <div class="col-md-4">
        </div>
        <div class="col-md-4 form-group">

            <form class="m-t-md" asp-controller="Login" asp-action="IniciarSesion" method="post">

                <div class="form-group">
                    <label for="nombreUsuario">
                        Nombre de usuario
                    </label>
                    @Html.TextBoxFor(m => m.NombreUsuario, new { @id = "usr", @class = "form-control" })
                </div>

                <div class="form-group">
                    <label for="contrasenaUsuario">
                        Contraseña
                    </label>
                    @Html.PasswordFor(m => m.Contrasena, new { @class = "form-control" })
                </div>

                @Html.Label("", (string)ViewBag.mensaje, new { @style = "color: red" })
                @Html.Label("", (string)ViewBag.mensajeCarrito)

                <br />
                <output>¿Aún no tienes cuenta? </output>
                <br />

                @Html.ActionLink("¡Haz click aquí!", "Registrarme", "Login")

                <br />

                <br />
                <input type="submit" class="form-control btn btn-warning" value="Iniciar Sesión">
                <br />
                <br />

            </form>

               
        </div>
    </div>
</div>